# See section 'Hacking the Parsing Tables: ACTION and GOTOs' in
# http://search.cpan.org/perldoc?Parse::Eyapp::debuggingtut
#
# See also: Debug.eyp Debug1.eyp Debug2.eyp  LookForward.eyp
# DynamicallyChangingTheParser.eyp This example illustrates how to dynamically
# change the behavior of the parser

%token D S

%{
our $VERSION = '0.01'; 
%}

%tree bypass

%%
p: %name PROG
    block +
;

block:
    %name BLOCK
    '{' ds ';' ss '}' 
  | %name SS
    '{' ss '}'
;

ds:
    %name MORE_Ds
    ds ';' D    
  | %name LAST_D
    D 
;

ss:
    %name SS
    S ';' ss      
  | %name S
    S       
;

%%

sub _Error {
  my $parser = shift;

  my ($token) = $parser->YYCurval;
  my ($what) = $token ? "input: '$token'" : "end of input";
  warn "Syntax error near $what\n";
}

sub _Lexer {
  my $self = shift;
  
  for ($self->{INPUT}) {
    s{^(\s*)}{};
   
    return ('',undef) unless $_;

    return ($1,$1) if s/^(.)//;
  }
  return ('',undef);
}

sub Run {
  my $debug = shift || 0;
  $debug = 0x1F if $debug;

  my $self = __PACKAGE__->new();
  $self->{INPUT} = <STDIN>;

  print 
    $self->YYParse( 
      yylex => \&_Lexer, 
      yyerror => \&_Error, 
      yydebug => $debug,
    )->str."\n";
}

Run(@ARGV) unless caller;

sub TERMINAL::info {
  $_[0]->{attr};
}
