%left   '+'
%left   '*'

%defaultaction { 
  my $self = shift;

  my $class = $self->YYPrefix;
  $class .=  $self->YYName; 

  $class->action(@_);
}

%%
exp:        %name NUM
              NUM 
        |   %name PLUS
              exp '+' exp         
        |   %name TIMES
              exp '*' exp         
        |   '(' exp ')'
              { $_[2] }
;

